{
  "name": "@spice-world/root",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "lefthook install",
    "dev": "bun run --parallel --filter './apps/*' dev stripe",
    "test": "bun run --parallel --filter './apps/*' test",
    "build": "bun run --parallel --filter './apps/*' build",
    "start": "bun run --parallel --filter './apps/*' start stripe",
    "format": "ultracite fix",
    "cache:clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules && bun pm cache rm",
    "iup": "bun update --interactive --recursive"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "catalog": {
    "@elysiajs/eden": "^1.4.6",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "elysia": "https://pkg.pr.new/elysiajs/elysia@563a873",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@sinclair/typebox": "^0.34.48",
    "@types/bun": "^1.3.8",
    "lefthook": "^2.1.0",
    "typescript": "^5.9.3",
    "ultracite": "7.1.5"
  },
  "patchedDependencies": {
    "@tanstack/form-core@1.27.5": "patches/@tanstack%2Fform-core@1.27.5.patch",
    "@elysiajs/eden@1.4.6": "patches/@elysiajs%2Feden@1.4.6.patch"
  },
  "dependencies": {
    "sst": "^3.17.38"
  }
}
