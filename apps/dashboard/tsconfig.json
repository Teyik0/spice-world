{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		// Qwik-specific configuration
		"lib": ["ESNext", "DOM", "WebWorker", "DOM.Iterable"],
		"jsxImportSource": "@qwik.dev/core",
		// Path aliases
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		// Qwik build output
		"outDir": "tmp"
	},
	"include": ["src/**/*", "./*.d.ts", "./*.config.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"../../packages/**",
		"../../apps/server/**"
	]
}
