{
  "name": "@spice-world/server",
  "version": "0.1.0",
  "private": true,
  "module": "src/index.ts",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "prisma generate && bun run --bun --watch --cpu-prof --cpu-prof-name '@spice-world/server' --inspect --title '@spice-world/server' src/index.ts",
    "test": "bun test --randomize --concurrent --bail",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/index.ts",
    "start": "./dist/server",
    "db:start": "bunx prisma dev",
    "db:reset": "bunx prisma migrate reset"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "catalog:",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/opentelemetry": "^1.4.6",
    "@elysiajs/swagger": "^1.3.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@polar-sh/better-auth": "^1.3.0",
    "@polar-sh/sdk": "^0.41.4",
    "@prisma/adapter-pg": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "@react-email/components": "^1.0.1",
    "better-auth": "^1.3.34",
    "elysia": "catalog:",
    "file-type": "^21.1.0",
    "react": "catalog:",
    "resend": "^6.4.2",
    "sharp": "^0.34.5",
    "uploadthing": "^7.7.4"
  },
  "devDependencies": {
    "@spice-world/emails": "workspace:*",
    "@types/react": "catalog:",
    "prisma": "^6.19.0"
  }
}
