{
	"name": "@spice-world/server",
	"version": "0.1.0",
	"private": true,
	"module": "src/index.ts",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"dev": "prisma generate && PORT=3001 bun run --bun --watch --cpu-prof --cpu-prof-name '@spice-world/server' --inspect --title '@spice-world/server' src/index.ts",
		"test": "bun test --randomize --concurrent --bail",
		"build": "bunx prisma generate && bun run build.ts",
		"start": "PORT=3001 ./dist/server",
		"db:start": "bunx prisma dev",
		"db:reset": "bunx prisma migrate reset"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.1",
		"@elysiajs/eden": "catalog:",
		"@elysiajs/openapi": "^1.4.13",
		"@elysiajs/opentelemetry": "^1.4.10",
		"@elysiajs/swagger": "^1.3.1",
		"@napi-rs/image": "^1.12.0",
		"@neondatabase/serverless": "^1.0.2",
		"@opentelemetry/exporter-trace-otlp-proto": "^0.209.0",
		"@opentelemetry/sdk-trace-node": "^2.3.0",
		"@polar-sh/better-auth": "^1.6.4",
		"@polar-sh/sdk": "^0.42.2",
		"@prisma/adapter-neon": "^7.2.0",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@react-email/components": "^1.0.4",
		"better-auth": "^1.4.12",
		"elysia": "catalog:",
		"file-type": "^21.3.0",
		"lru-cache": "^11.2.4",
		"p-limit": "^7.2.0",
		"pg": "^8.16.3",
		"react": "catalog:",
		"resend": "^6.7.0",
		"uploadthing": "^7.7.4",
		"ws": "^8.19.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.2.0",
		"@spice-world/emails": "workspace:*",
		"@types/react": "catalog:",
		"@types/ws": "^8.18.1",
		"prisma": "^7.2.0"
	}
}
