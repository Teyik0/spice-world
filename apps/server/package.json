{
	"name": "@spice-world/server",
	"version": "0.1.0",
	"private": true,
	"module": "src/index.ts",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"dev": "prisma generate && PORT=3001 bun run --bun --watch --cpu-prof --cpu-prof-name '@spice-world/server' --inspect --title '@spice-world/server' src/index.ts",
		"test": "bun test --randomize --concurrent --bail",
		"build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/index.ts",
		"start": "./dist/server",
		"db:start": "bunx prisma dev",
		"db:reset": "bunx prisma migrate reset"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.1",
		"@elysiajs/eden": "catalog:",
		"@elysiajs/openapi": "^1.4.13",
		"@elysiajs/opentelemetry": "^1.4.10",
		"@elysiajs/swagger": "^1.3.1",
		"@neondatabase/serverless": "^1.0.2",
		"@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
		"@opentelemetry/sdk-trace-node": "^2.2.0",
		"@polar-sh/better-auth": "^1.6.3",
		"@polar-sh/sdk": "^0.42.1",
		"@prisma/adapter-neon": "^7.2.0",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@react-email/components": "^1.0.3",
		"better-auth": "^1.4.9",
		"elysia": "catalog:",
		"file-type": "^21.2.0",
		"pg": "^8.16.3",
		"react": "catalog:",
		"resend": "^6.6.0",
		"sharp": "^0.34.5",
		"uploadthing": "^7.7.4",
		"ws": "^8.18.3"
	},
	"devDependencies": {
		"@spice-world/emails": "workspace:*",
		"@types/react": "catalog:",
		"@types/ws": "^8.18.1",
		"prisma": "^7.2.0"
	}
}
