{
  "name": "@spice-world/server",
  "version": "0.1.0",
  "private": true,
  "module": "src/index.ts",
  "type": "module",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "prisma generate && bun run --bun --watch --inspect --title '@spice-world/server' src/index.ts",
    "test": "bun test --randomize --concurrent --bail",
    "build": "build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/index.ts",
    "start": "./dist/server",
    "db:start": "bunx prisma dev",
    "db:reset": "bunx prisma migrate reset"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "^1.4.4",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/opentelemetry": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.207.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@polar-sh/better-auth": "^1.1.11",
    "@polar-sh/sdk": "^0.38.1",
    "@prisma/adapter-pg": "^6.17.1",
    "@prisma/client": "^6.17.1",
    "@react-email/components": "^0.5.7",
    "better-auth": "^1.3.28",
    "elysia": "^1.4.12",
    "file-type": "^21.0.0",
    "resend": "^6.2.2",
    "sharp": "^0.34.4",
    "uploadthing": "^7.7.4"
  },
  "devDependencies": {
    "@spice-world/emails": "workspace:*",
    "prisma": "^6.17.1"
  }
}
